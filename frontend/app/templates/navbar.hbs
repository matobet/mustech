<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
          {{#link-to 'index' class="navbar-brand"}}Mustech{{/link-to}}
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>{{#link-to 'users'}}Users{{/link-to}}</li>
            </ul>
            <div id="login-form" class="navbar-right">
              {{#if session.isAuthenticated}}
                  <div class="btn-group">
                      <button class="btn btn-material-amber navbar-btn btn-flat">{{session.secure.identification}}</button>
                      <button {{action 'logout'}} type="submit" class="btn btn-info navbar-btn">Logout</button>
                  </div>
              {{else}}
                  <button {{action 'openModal' 'login-modal'}} type="button" class="btn btn-material-orange navbar-btn">Login</button>
                  <button {{action 'openModal' 'register-modal' user}} type="button" class="btn btn-link btn-sm navbar-btn">Register</button>
              {{/if}}
            </div>
        </div>
    </div>
</nav>