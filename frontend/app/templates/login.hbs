<form class="navbar-form navbar-right" {{action 'authenticate' on='submit'}}>
    <div class="form-group">
      {{input id='identification' type='text' class='form-control' name='username' placeholder='Username' value=identification}}
    </div>
    <div class="form-group">
      {{input id='password' type='password' class='form-control' name='password' placeholder='Password' value=password}}
    </div>
    <button type="submit" class="btn btn-default">Login</button>
</form>